{
  "name": "mono-review",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv turbo run build --skip-cache",
    "dev": "dotenv turbo run dev",
    "dev:web": "turbo run dev --filter=@pr/web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.14.5",
    "@types/tar": "^6.1.4",
    "eslint-config-custom": "workspace:*",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prettier": "latest",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.21.0",
  "dependencies": {
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.1.0"
  }
}
